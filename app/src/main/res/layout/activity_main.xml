<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/l_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2EA194"
        android:orientation="vertical"
        android:padding="20dp"

        >



        <TextView
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/rabbit"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:singleLine="true"
            android:text="@string/title"
            android:textColor="#124C12"
            android:textSize="30sp"
            android:gravity="center"></TextView>


        <Button
            android:id="@+id/btn_bar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/view_1"
            android:text="Overall Hashtag rank"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_press"
            android:textSize="30sp"
            android:textColor="#99C333"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/btn_bar_daily"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/btn_bar"
            android:text="Daily Hashtag rank"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_press"
            android:textSize="30sp"
            android:textColor="#99C333"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btn_bar_weekly"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/btn_bar_daily"
            android:text="Weekly Hashtag rank"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_press"
            android:textSize="30sp"
            android:textColor="#99C333"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_bar_monthly"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/btn_bar_weekly"
            android:text="Monthly Hashtag rank"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_press"
            android:textSize="30sp"
            android:textColor="#99C333"
            android:textAllCaps="false" />
    </RelativeLayout>


</ScrollView>