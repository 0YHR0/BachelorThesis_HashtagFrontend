<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarchartWeeklyActivity">

    <TextView
        android:id="@+id/text_week"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Weekly Hashtag Rank"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#DF66E5E1"
        android:textColor="#2E5984"></TextView>

    <WebView
        android:id="@+id/web_barWeek"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_week"></WebView>

</RelativeLayout>